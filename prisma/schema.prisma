generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

model Filme {
    id         Int      @id @default(autoincrement())
    titulo     String
    descricao  String
    duracao    Int
    genero     String
    nota       Decimal @db.Decimal(4,2)
    disponivel Boolean  @default(true)
    criadoEm   DateTime @default(now())


    @@map("filme")
}
